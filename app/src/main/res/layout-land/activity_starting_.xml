<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cloud"
    tools:context="fall2018.csc2017.GameCentre.slidingTiles.SlidingTilesStartingActivity">

    <TextView
        android:id="@+id/_slidingtiles_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="135dp"
        android:layout_marginBottom="146dp"
        android:gravity="center"
        android:text="@string/slidingTiles_description"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="305dp"
        android:layout_height="181dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="200dp"
        android:layout_marginTop="21dp"
        app:srcCompat="@drawable/title_slidingtiles" />


    <ImageButton
        android:id="@+id/scoreboardButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="#00000000"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/icon_scoreboard" />

    <Button
        android:id="@+id/NewGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/LoadButton"
        android:layout_alignEnd="@+id/scoreboardButton"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="129dp"
        android:text="New Game" />

    <Button
        android:id="@+id/SaveButton"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/LoadButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="128dp"
        android:layout_marginTop="2dp"
        android:text="Save Game" />

    <Button
        android:id="@+id/LoadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="264dp"
        android:layout_marginBottom="50dp"
        android:text="Load Saved Game"
        android:textSize="12sp" />

</RelativeLayout>