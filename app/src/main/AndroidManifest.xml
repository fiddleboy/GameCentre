<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fall2018.csc2017.GameCentre">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/you_logo_black"
        android:label="@string/app_name"
        android:roundIcon="@drawable/you_logo_black"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".gameCentre.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".gameCentre.SignUpActivity" />
        <activity android:name=".gameCentre.GameCentreInterfaceActivity" />
        <activity android:name=".slidingTiles.SlidingTilesStartingActivity" />
        <activity android:name=".slidingTiles.SlidingTilesGameActivity" />
        <activity
            android:name=".slidingTiles.SlidingTilesNewGamePop"
            android:theme="@style/DialogActivity" />
        <activity
            android:name=".gameCentre.ScoreBoardActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".gameCentre.NavSetting" />
        <activity android:name=".gameCentre.NavChangePassword" />
        <activity
            android:name=".sudoku.SudokuStartingActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".sudoku.SudokuGameActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".pictureMatching.PictureMatchingGameActivity" />
        <activity
            android:name=".pictureMatching.PictureMatchingStartingActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".pictureMatching.MatchingNewGamePop"
            android:theme="@style/DialogActivity"></activity>
        <activity android:name=".util.popScore"
            android:theme="@style/AppTheme.CustomTheme">
        </activity>
    </application>

</manifest>